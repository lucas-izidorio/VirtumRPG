        Padding="15,0,15,0"
        HorizontalOptions="FillAndExpand"
        VerticalOptions="Center">

        <Frame
            Grid.Row="0"
            Padding="0"
            BackgroundColor="White"
            BorderColor="White"
            CornerRadius="10"
            HasShadow="True">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

